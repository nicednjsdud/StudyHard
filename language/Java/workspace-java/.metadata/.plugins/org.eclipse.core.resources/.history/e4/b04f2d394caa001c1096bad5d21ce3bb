package kr.co.ezenac.total;

import java.util.Scanner;

public class MyCalculator {

	public static void main(String[] args) {
		Scanner sc =new Scanner(System.in);	
		
		while(true) {
			//메뉴 출력
			showMenu();
			char myChar = sc.next().charAt(0);
			checkNum(myChar);
		}
		
		sc.close();
	}

